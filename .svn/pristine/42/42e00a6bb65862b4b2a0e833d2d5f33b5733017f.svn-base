.sync-button{
	position: absolute;
	width: 96px;
	height: 96px;
	right: 0px;
	outline: none;
	border-radius: 100%;
	opacity: 0.3;
	filter: alpha(opacity=30); /* For IE8 and earlier */
	background: url(sync.png) no-repeat;
	background-size: 96px 96px;
}

.sync{
	/* background: url(sync.png) no-repeat; */
	background: url(sync.png) no-repeat;
	background-size: 96px 96px;
}

.sync-ok{
	background: url(sync-ok.png) no-repeat;
	background-size: 96px 96px;
}

.sync-auto{
	background: url(sync-auto.png) no-repeat;
	background-size: 96px 96px;
}

.sync-error{
	background: url(sync-error.png) no-repeat;
	background-size: 96px 96px;
}

.offline{
	background: url(offline.png) no-repeat;
	background-size: 96px 96px;
}

.online{
	background: url(online.png) no-repeat;
	background-size: 96px 96px;
}

.sync-button-pressed{
	opacity: 0.8;
	filter: alpha(opacity=80); /* For IE8 and earlier */
}

.sync-button-disabled{
	opacity: 0.3;
	filter: alpha(opacity=30); /* For IE8 and earlier */
	/*pointer-events: none;*/
}

.sync-button-rotating {
	opacity: 0.8;
	filter: alpha(opacity=80); /* For IE8 and earlier */
	-webkit-animation: rotation 1s infinite linear;
}
@-webkit-keyframes rotation {
	from {
			-webkit-transform: rotate(0deg);
	}
	to {
			-webkit-transform: rotate(359deg);
	}
}